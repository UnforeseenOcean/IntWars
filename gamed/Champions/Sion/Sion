#ifndef _CHAMPION_SION_H
#define _CHAMPION_SION_H

#include "Champion.h"

class Sion : public Champion {

public:
   Sion(Map* map, uint32 id) : Champion("Sion", map, id) {
      stats->setCurrentHealth(507.f);
      stats->setMaxHealth(507.f);
      stats->setCurrentMana(240.f);
      stats->setMaxMana(240.f);
      stats->setBaseAd(58.7075f);
      stats->setRange(125.f);
      stats->setMovementSpeed(345.f);
      stats->setArmor(25.f);
      stats->setMagicArmor(31.25f);
      stats->setHp5(8.85f);
      stats->setMp5(6.7f);
	    stats->setBaseSpeed(0.625f)
   }


};

#endif
